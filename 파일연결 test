#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

FILE* ifp = NULL, * ofp = NULL; // file pointers

unsigned long int access_addr; // byte address (located at 1st column)
char access_type; // 'b'(byte), 'h'(halfword), or 'w'(word)
// (located at 2nd column)

int main() {

	ifp = fopen("access_input.txt", "r");
	if (ifp == NULL) {
		printf("Can't open input file\n");
		return -1;
	}
	
	ofp = fopen("access_output.txt", "w");
	if (ofp == NULL) {
		printf("Can't open output file\n");
		fclose(ifp);
		return -1;
	}
	
	while(1)
	{	
		fscanf(ifp, "%d %c", &access_addr, &access_type);   // 서식을 지정하여 파일에서 문자열 읽기
		//printf("%d %c\n", access_addr, access_type);
		fprintf(ofp, "===== addr %d type %c =====\n", access_addr[i], access_type[i]);
		if (access_type == NULL)
			break;
	} 
	fclose(ifp);    // 파일 포인터 닫기
	fclose(ofp);
	return 0;

}
